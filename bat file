@echo off

REM ----------------------------------------
REM 1) Activate the ERIC environment
REM    "%~dp0" = directory of this .bat file
REM    Then we append "ERIC\Scripts\activate.bat"
REM ----------------------------------------
call "%~dp0ERIC\Scripts\activate.bat"

REM ----------------------------------------
REM 2) Launch Jupyter Notebook on abc.ipynb
REM    Again prefixing with "%~dp0"
REM ----------------------------------------
jupyter notebook "%~dp0abc.ipynb"
